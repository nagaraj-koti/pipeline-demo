pipeline{
    agent none
    stages {
        stage ("BUILD"){
            agent any
            steps{
                echo "Building the Application.."
                sh 'timedatectl'
                sh 'sleep 3'
            }
        }
        stage("DEPLOY"){
            agent {label "node1"}
            steps{
                echo "Deploying application.."
                sh '''
                    date
                    uname -r
                    sleep 4
                '''
            }
        }
        stage("TESTING"){
            parallel{
                stage("TEST1"){
                    agent {label "master"}
                    steps{
                        echo "Testing----"
                        sh 'echo "Test-1 running"'
                        sh 'sleep 3'
                    }
                }
                stage("TEST2"){
                    agent {label "node2"}
                    steps{
                        echo "Testing----"
                        sh '''
                            echo "Test-2 running"
                            cat /etc/os-release
                            who
                            id
                            sleep 3
                        '''
                    }

                }
            }
        }
    }
}